
@model List<Category>

<partial name="_Notification" />

<div class="row">
    <div class="col-md-6">
        <h2>LIST CATEGORY</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Thêm mới
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Thứ tự hiển thị</th>
            <th>Tuỳ chỉnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Tên</td>
                <td>@x.Thứ tự hiển thị </td>
                <td>
                    <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                        <i class="bi bi-pencil-square"></i>Chỉnh sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
